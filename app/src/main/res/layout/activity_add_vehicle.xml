<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorCommunityTitleBackground">

        <ImageView
            android:id="@+id/vehicleAdd_close"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_margin="15dp"
            android:src="@drawable/bp_left"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="添加车辆"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_centerInParent="true"
            android:gravity="center"/>

        <ImageView
            android:id="@+id/vehicleAdd_ok"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_margin="15dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/bp_agree"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:background="@android:color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/vehicleAdd_licenseNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="车牌号"
                android:layout_alignParentLeft="true"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/vehicleAdd_licenseNumberText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/vehicleAdd_licenseNumberImg"
                android:layout_centerVertical="true"
                android:gravity="center"/>

            <ImageView
                android:id="@+id/vehicleAdd_licenseNumberImg"
                android:layout_width="15dp"
                android:layout_height="25dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/gp_right"/>

        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#33707070"/>

        <RelativeLayout
            android:id="@+id/vehicleAdd_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="车辆类型"
                android:layout_alignParentLeft="true"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/vehicleAdd_typeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/vehicleAdd_typeImg"
                android:layout_centerVertical="true"
                android:gravity="center"/>

            <ImageView
                android:id="@+id/vehicleAdd_typeImg"
                android:layout_width="15dp"
                android:layout_height="25dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/gp_right"/>

        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#33707070"/>


        <RelativeLayout
            android:id="@+id/vehicleAdd_licensePhoto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="车辆牌照/牌照凭证"
                android:layout_alignParentLeft="true"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_centerVertical="true"/>

            <ImageView
                android:id="@+id/vehicleAdd_licensePhotoCheck"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_toLeftOf="@id/vehicleAdd_licensePhotoImg"
                android:layout_centerVertical="true"
                android:src="@drawable/gp_agree"
                android:gravity="center"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/vehicleAdd_licensePhotoImg"
                android:layout_width="15dp"
                android:layout_height="25dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/gp_right"/>

        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#33707070"/>

        <RelativeLayout
            android:id="@+id/vehicleAdd_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="车辆描述"
                android:layout_alignParentLeft="true"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/vehicleAdd_descriptionText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/vehicleAdd_descriptionImg"
                android:layout_centerVertical="true"
                android:gravity="center"/>

            <ImageView
                android:id="@+id/vehicleAdd_descriptionImg"
                android:layout_width="15dp"
                android:layout_height="25dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/gp_right"/>

        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#33707070"/>

    </LinearLayout>




</LinearLayout>