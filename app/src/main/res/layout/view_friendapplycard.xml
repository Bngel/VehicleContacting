<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="20dp">

    <com.example.vehiclecontacting.Widget.AvtView
        android:id="@+id/friendapplyCard_avt"
        android:layout_width="50dp"
        android:layout_height="50dp"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:layout_marginLeft="20dp"
        android:orientation="vertical"
        android:layout_gravity="center_vertical">

        <TextView
            android:id="@+id/friendapplyCard_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:textSize="20sp"
            android:textColor="@android:color/black"/>

        <TextView
            android:id="@+id/friendapplyCard_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:textSize="15sp"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/friendapplyCard_agree"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/gp_agree"
        android:layout_gravity="center_vertical"
        android:layout_margin="10dp"/>

    <ImageView
        android:id="@+id/friendapplyCard_refuse"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/rp_refuse"
        android:layout_gravity="center_vertical"
        android:layout_margin="10dp"/>

</LinearLayout>